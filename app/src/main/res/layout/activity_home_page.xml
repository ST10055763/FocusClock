<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:text="Hello User"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="22dp"
        android:text="Here's Todays Shedule"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="118dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="110dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="166dp"
        tools:srcCompat="@color/fcOrange" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="88dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:text="x / y Hours Done"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="173dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundGrey"
        android:text="Min Goal"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundGrey"
        android:text="Max Goal"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="260dp"
        android:layout_height="22dp"
        android:text="x Tasks Completed"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="200dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="355dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="292dp"
        tools:srcCompat="@color/fcBlue" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="355dp"
        android:layout_height="107dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="393dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/fcOrange"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="537dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundGrey"
        android:text="Today"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="344dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="43dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/calendarlogo"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="303dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/backgroundGrey"
        android:text="View"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="344dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="292dp" />

</androidx.constraintlayout.widget.ConstraintLayout>