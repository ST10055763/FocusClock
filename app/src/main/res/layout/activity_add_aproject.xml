<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAProjectActivity">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:text="Add A Project"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populate Your Project Details"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="117dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="327dp"
        android:layout_height="343dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="171dp"
        tools:srcCompat="@color/backgroundGrey" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name: "
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/APprojectNametxt"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Project Name"
        android:background="@color/white"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date (Optional)"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/APDueDatetxt"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Due Date"
        android:inputType="datetime|date"
        android:text=""
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Hours: "
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="373dp" />

    <EditText
        android:id="@+id/APGoalHrstxt"
        android:layout_width="309dp"
        android:layout_height="46dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Goal Hours"
        android:inputType="number"
        android:text=""
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/APSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:backgroundTint="@color/fcOrange"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="453dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/APfloatingBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:backgroundTint="@color/fcOrange"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="534dp" />
</androidx.constraintlayout.widget.ConstraintLayout>