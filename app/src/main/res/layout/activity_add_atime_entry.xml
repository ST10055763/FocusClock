<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddATimeEntryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add A Time Entry"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populate Your Time Tracking Details"
        android:textColor="#444749"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="384dp"
        android:layout_height="482dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="112dp"
        tools:srcCompat="@color/fcGrey" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Picture (Optional)"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="431dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time: "
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageButton
        android:id="@+id/AEAddPictureBtn"
        android:layout_width="79dp"
        android:layout_height="65dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="459dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="347dp" />

    <EditText
        android:id="@+id/AEendTimetxt"
        android:layout_width="282dp"
        android:layout_height="37dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="End Time"
        android:inputType="text"
        android:text=""
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="375dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="282dp"
        android:layout_height="37dp"
        android:layout_margin="16dp"
        android:hint="@string/select"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="148dp">

        <AutoCompleteTextView
            android:id="@+id/auto_project_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Task: "
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="195dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/drop_down_Task"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="282dp"
        android:layout_height="37dp"
        android:layout_margin="16dp"
        android:hint="Select Item"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="221dp">

        <AutoCompleteTextView
            android:id="@+id/autocomplete_task_txt"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/AEStartTimetxt"
        android:layout_width="282dp"
        android:layout_height="37dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Start Time"
        android:inputType="text"
        android:text=""
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Project: "
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="129dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AEfloatingReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fcOrange"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="602dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAddTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fcOrange"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="214dp" />

    <Button
        android:id="@+id/AELoginBtn"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/fcOrange"
        android:text="LOG"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="543dp" />

</androidx.constraintlayout.widget.ConstraintLayout>