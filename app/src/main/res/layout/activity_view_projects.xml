<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProjectsActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="351dp"
        android:layout_height="63dp"
        android:src="@color/fcBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967"
        tools:srcCompat="@color/fcBlue" />

    <ImageButton
        android:id="@+id/navbarSettings"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:backgroundTint="#6279E1"
        android:contentDescription="settings"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        app:srcCompat="@drawable/settings" />

    <ImageButton
        android:id="@+id/navbarPomodoro"
        android:layout_width="66dp"
        android:layout_height="55dp"
        android:backgroundTint="#6279E1"
        android:contentDescription="pomodorotimer"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967"
        app:srcCompat="@drawable/timer" />

    <ImageButton
        android:id="@+id/navbarFilter"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:backgroundTint="#6279E1"
        android:contentDescription="filter"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/filter" />

    <ImageButton
        android:id="@+id/navbarHome"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:backgroundTint="#6279E1"
        android:contentDescription="home"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/navbarEntries"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:backgroundTint="#6279E1"
        android:contentDescription="entriesList"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        app:srcCompat="@drawable/clipboard" />

    <ImageView
        android:id="@+id/ivVPNonCatBack"
        android:layout_width="347dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261"
        android:backgroundTint="@color/backgroundGrey"
        android:background="@color/backgroundGrey"
        tools:srcCompat="@color/backgroundGrey" />

    <TextView
        android:id="@+id/tvVPNonCatHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-Categorised"
        app:layout_constraintBottom_toBottomOf="@+id/ivNonCatSep"
        app:layout_constraintEnd_toEndOf="@+id/ivVPNonCatBack"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivVPNonCatBack"
        app:layout_constraintTop_toTopOf="@+id/ivVPNonCatBack" />

    <ImageView
        android:id="@+id/ivNonCatSep"
        android:layout_width="347dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivVPNonCatBack"
        app:layout_constraintEnd_toEndOf="@+id/ivVPNonCatBack"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivVPNonCatBack"
        app:layout_constraintTop_toTopOf="@+id/ivVPNonCatBack"
        app:layout_constraintVertical_bias="0.375"
        android:background="@color/black"
        tools:srcCompat="@color/black" />

    <TextView
        android:id="@+id/tvVPNonCatTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Tasks"
        app:layout_constraintBottom_toBottomOf="@+id/ivVPNonCatBack"
        app:layout_constraintEnd_toEndOf="@+id/ivVPNonCatBack"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="@+id/ivVPNonCatBack"
        app:layout_constraintTop_toTopOf="@+id/ivVPNonCatBack"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/tvVPNonCatInsertTot"
        android:layout_width="72dp"
        android:layout_height="17dp"
        android:text="Insert"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/ivVPNonCatBack"
        app:layout_constraintEnd_toEndOf="@+id/ivVPNonCatBack"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="@+id/ivVPNonCatBack"
        app:layout_constraintTop_toTopOf="@+id/ivVPNonCatBack"
        app:layout_constraintVertical_bias="0.923" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recViewVP"
        android:layout_width="346dp"
        android:layout_height="247dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivVPNonCatBack"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/tvVPHeader"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:text="My Projects"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ivVPNonCatBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVPSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Your Projects / Add a New Project"
        app:layout_constraintBottom_toTopOf="@+id/ivVPNonCatBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVPHeader"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatActButVPAddProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="add project"
        app:backgroundTint="@color/fcOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recViewVP"
        app:layout_constraintVertical_bias="0.223"
        app:srcCompat="@android:drawable/ic_menu_add" />

</androidx.constraintlayout.widget.ConstraintLayout>