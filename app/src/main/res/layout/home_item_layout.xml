<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundGrey"
    android:backgroundTint="@color/backgroundGrey"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvHIProjName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHITaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivHISeparator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        tools:srcCompat="@color/black" />

    <TextView
        android:id="@+id/tvHITimeTracked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Tracked"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHIDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="14sp" />
</LinearLayout>
